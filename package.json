{
  "name": "Project3",
  "version": "1.0.0",
  "description": "Weather Station with API",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && yarn run start:prod || yarn seed && yarn run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"yarn run client\"",
    "client": "cd client && yarn run start",
    "lint": "eslint \"**/*.js\" --quiet",
    "seed": "node seeds/StationSeed.js",
    "test": "yarn run lint",
    "install": "cd client && yarn install",
    "build": "cd client && yarn run build",
    "heroku-postbuild": "yarn run build"
  },
  "repository": "https://github.com/btdrizzle/Project3.git",
  "author": "Brian Drake",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "google-map-react": "^1.1.2",
    "if-env": "^1.0.4",
    "mongoose": "^5.4.6",
    "mongoose-find-or-create": "^1.3.1",
    "morgan": "^1.9.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.15.0",
    "nodemon": "^1.18.9"
  }
}
